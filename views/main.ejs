					<!--  end point    -->
					<circle class="end_circle" id="initial-end-circle" stroke="black" stroke-width="2" fill="black" />
					<text class="end_text" id="initial-end-text" alignment-baseline="middle" text-anchor="middle" fill="white">OP</text>


