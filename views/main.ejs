						<text class="end_text" id="initial-end-text" x="90%" y="50%" alignment-baseline="middle" text-anchor="middle" fill="white">OP</text>
					</g>
-->
			</svg>
		</div>
	</div>



	<script>
		//가로넓이 지정하면,
		//canvas_outer가로 수정, 세로 크기 가로의 1/3수정
		//canvas_inner
		
		//*********************초기 브라우저의 크기를 지정**********************//		
		$('.middle').css({"width" : $(document).width() + "px"});
		$('.line_description').css({"width" : $(document).width() * 0.2 + "px"});
		$('.canvas_outer').css({"width" : $(document).width() * 0.8 + "px"});
		
		//*********************초기 라인의 크기를 조정**********************//				
		$('#initial-line').attr("x2", $('.canvas_inner').width() - 150);
		$('#initial-end-circle').attr("cx", $('.canvas_inner').width() - 150);
		$('#initial-end-text').attr("x", $('.canvas_inner').width() - 150);

		//*********************라인의 길이를 조정**********************//
		var i = 0;
		$('#plus').click(function() {
							i++;
							$('#test').text(i);
							$('.middle').css({"width" : $('.middle').width() + 100 + "px"});
							$('.canvas_outer').css({"width" : $('.middle').width()- $('.line_description').width() + "px"});
							$('#initial-line').attr("x2",$('.canvas_inner').width() - 150);
							$('#initial-end-circle').attr("cx",$('.canvas_inner').width() - 150);
							$('#initial-end-text').attr("x",$('.canvas_inner').width() - 150);
						});

		$('#minus').click(function() {
					if (i <= 0) {
						alert("더 이상 작게 설정할 수 없습니다");
					} else {
						i--;
						$('#test').text(i);
						$('.middle').css({"width" : $('.middle').width() - 100 + "px"});
						$('.canvas_outer').css({"width" : $('.middle').width()- $('.line_description').width()+ "px"});
						$('#initial-line').attr("x2", $('.canvas_inner').width() - 150);
						$('#initial-end-circle').attr("cx",$('.canvas_inner').width() - 150);
						$('#initial-end-text').attr("x",$('.canvas_inner').width() - 150);
					}
				});

		//*********************ip,op클릭시 해당 텍스트 산출**********************//
		
		
		//*********************plus button 클릭시 하위레벨의 라인 생성**********************//
		
		
		
		//*********************plus button 클릭시 하위레벨의 라인 desc 생성**********************//
		$(document).on('click','.add_line',function(){
			//alert($(this).parent().parent().attr('step'));
			//alert($(this).parent().parent().attr('num'));
//*			
			//get parent step
			var step = $(this).parent().parent().attr('step');
			
			//get the number of the same steps which will be created
			var num = $(this).parent().parent().attr('children');
			$(this).parent().parent().attr('children',parseInt(num)+1);
			
			var html ='<div class="line-desc-bunch" step="'+(parseInt(step)+1)+'" num="'+(parseInt(num)+1)+'" children="0">'+
						'<div class="panel panel-default">'+
							'<table class="table table-striped">'+
								'<tr>'+
									'<td>INPUT</td>'+
									'<td><textarea class="form-control taIp"></textarea></td>'+
								'</tr>'+
								'<tr>'+
									'<td>OUTPUT</td>'+
									'<td><textarea class="form-control taOp"></textarea></td>'+
								'</tr>'+
							'</table>'+
							'<button class="del_line">'+
								'<span class="glyphicon glyphicon-minus"></span>'+
							'</button>'+
							'<button class="add_line">'+
								'<span class="glyphicon glyphicon-plus"></span>'+
							'</button>'+
						'</div>'+
					'</div>';
					
			$(this).parent().parent().after(html);
//*/					
		});	
		
		//*********************del button 클릭시 하위레벨의 라인 desc 삭제**********************//
		
		$(document).on('click','.del_line',function(){
			var step = $(this).parent().parent().attr('step');
			var num = $(this).parent().parent().attr('num');
			if(step=="1" && num=="1"){}
			else{
				$(this).parent().parent().remove();
			}
		});
		
		
	</script>

	


</body>
</html>